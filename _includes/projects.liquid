<div class="col">
  <div class="card h-100 hoverable">
    {% unless project.redirect %}
      {% if project.img %}
        <a href="{{ project.url | relative_url }}" class="card-img-link">
          {%
            include figure.liquid
            loading="eager"
            path=project.img
            sizes = "250px"
            alt="project thumbnail"
            class="card-img-top"
          %}
        </a>
      {% endif %}
    {% else %}
      {% if project.img %}
        {%
          include figure.liquid
          loading="eager"
          path=project.img
          sizes = "250px"
          alt="project thumbnail"
          class="card-img-top"
        %}
      {% endif %}
    {% endunless %}
    <div class="card-body d-flex flex-column">
      {% unless project.redirect %}
        <a href="{{ project.url | relative_url }}" class="card-title-link">
          <h2 class="card-title">{{ project.title }}</h2>
        </a>
      {% else %}
        <h2 class="card-title">{{ project.title }}</h2>
      {% endunless %}
      <p class="card-text flex-grow-1">{{ project.description }}</p>
      
      {% if project.technologies %}
        <div class="project-technologies {% unless project.github %}mb-0{% else %}mb-3{% endunless %}">
          <div class="tech-tags">
            {% assign tech_list = project.technologies | split: ", " %}
            {% for tech in tech_list %}
              <span class="tech-tag">{{ tech | strip }}</span>
            {% endfor %}
          </div>
        </div>
      {% endif %}
      
      {% if project.github %}
        <div class="project-footer mt-auto">
          <a href="{{ project.github }}" class="github-link" target="_blank" rel="noopener noreferrer" onclick="event.stopPropagation();">
            <i class="fa-brands fa-github"></i> View on GitHub
          </a>
        </div>
      {% endif %}
    </div>
    {% unless project.redirect %}
      <a href="{{ project.url | relative_url }}" class="card-overlay-link"></a>
    {% endunless %}
  </div>
</div>
